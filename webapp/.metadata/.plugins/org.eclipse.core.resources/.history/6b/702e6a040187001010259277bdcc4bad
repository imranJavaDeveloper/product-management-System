	// http://localhost:8080/springmvc-demo/show-record
	@RequestMapping("/show-record")
	public ModelAndView getProductDetails()
	{
		ModelAndView model=new ModelAndView("show-details");
		model.addObject("pid",101);
		model.addObject("name","Laptop");
		model.addObject("brand","HP");
		model.addObject("price",78000);
		return model;
	}
}
